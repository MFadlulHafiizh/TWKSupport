<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="TWK SUPPORT"
        android:textColor="@color/blackCharcoal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/blackCharcoal"
        android:fontFamily="@font/comfortaa_bold"
        android:textSize="14sp"
        android:text="Bug Report" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:padding="24dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingVertical="5dp"
                    android:text="Priority"
                    android:textColor="@color/defaultWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/priorityDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:paddingVertical="5dp"
                    android:paddingLeft="16dp"
                    android:text="High"
                    android:textColor="@color/defaultWhite"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingVertical="5dp"
                    android:text="Apps name"
                    android:textColor="@color/defaultWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/appnameDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:paddingVertical="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:text="TWK Support"
                    android:textColor="@color/defaultWhite"
                    android:textSize="13sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingVertical="5dp"
                    android:text="Subject"
                    android:textColor="@color/defaultWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/subjectDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:paddingVertical="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/defaultWhite"
                    android:textSize="13sp"
                    android:text="Cannot upload image" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_regular"
                    android:paddingVertical="5dp"
                    android:text="Detail :"
                    android:textColor="@color/defaultWhite"
                    android:textSize="14sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/detail_content"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_bold"
                    android:paddingVertical="5dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                    android:textColor="@color/defaultWhite"
                    android:textSize="13sp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btn_assign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:fontFamily="@font/comfortaa_bold"
            android:background="@drawable/button_red"
            android:textColor="@color/defaultWhite"
            android:layout_marginVertical="6dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Assign"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>