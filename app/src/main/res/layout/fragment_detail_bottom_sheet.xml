<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/request_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_bold"
        android:textAlignment="center"
        android:textColor="@color/defaultWhite"
        android:textSize="16sp"
        android:text="@string/titleBugRequest" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingVertical="5dp"
                android:text="Priority"
                android:textColor="@color/defaultWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bt_priorityDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:text="High"
                android:textColor="@color/defaultWhite"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingVertical="5dp"
                android:text="Apps name"
                android:textColor="@color/defaultWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bt_appnameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:text="TWK Support"
                android:textColor="@color/defaultWhite"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingVertical="5dp"
                android:text="Subject"
                android:textColor="@color/defaultWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bt_subjectDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:paddingVertical="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:text="Cannot upload image"
                android:textColor="@color/defaultWhite"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingVertical="5dp"
                android:text="Detail :"
                android:textColor="@color/defaultWhite"
                android:textSize="14sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/bt_detail_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:fontFamily="@font/comfortaa_bold"
                android:maxLines="8"
                android:paddingVertical="5dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
                android:textColor="@color/defaultWhite"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bt_btn_assign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Assign"
        android:textAllCaps="false"
        android:textColor="@color/defaultWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>